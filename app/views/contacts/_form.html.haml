= simple_form_for @contact, remote: true, html: { class: 'form_contact' } do |f|
  = f.input :name, input_html: { class: 'form-control input-box' }, label: false, wrapper_html: { class: 'contact-form form-inline' }
  = f.input :email, input_html: { class: 'form-control input-box' }, label: false, wrapper_html: { class: 'contact-form form-inline' }
  = f.input :message, input_html: { class: 'form-control text-area-box' }, label: false, wrapper_html: { class: 'contact-form form-inline' }
  .contact-form.form-inline
    = f.button :submit, class: 'standard-button'